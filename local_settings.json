{
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "files.trimTrailingWhitespace": true,
    "files.autoSaveDelay": 5000,
    "files.autoSave": "off",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.startupEditor": "none",
    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,
    "editor.fontFamily": "JetBrains Mono, 'Courier New', monospace",
    "editor.fontSize": 15,
    "editor.fontWeight": "500",
    "editor.letterSpacing": 1.0,
    "editor.lineHeight": 22,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 200,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.rulers": [
        80,
    ],
    "editor.formatOnType": true,
    "editor.renderLineHighlight": "line",
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "boundary",
    "editor.selectionHighlight": true,
    "editor.roundedSelection": true,
    "editor.tabSize": 8,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                ],
                "settings": {
                    "fontStyle": "italic bold",
                }
            }
        ],
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.colorTheme": "Cobalt2",
    "workbench.editor.showTabs": true,
    "workbench.sideBar.location": "right",
    "workbench.colorCustomizations": {
        "editor.findMatchHighlightBorder": "#2f00ff",
        "editorRuler.foreground": "#ff0000",
        "editor.lineHighlightBorder": "#c2a4a4",
        "editorWhitespace.foreground": "#ffffff",
        "editor.selectionHighlightBackground": "#213fa0",
        "editor.selectionHighlightBorder": "#213fa0",
    },
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.scrollback": 1000000,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "5095": "linux"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": null,
    "breadcrumbs.enabled": false,
}
